<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d" Background="Bisque"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Button Click="btnOk_Click" x:Name="btnOk" Content="OK" Width="272" Height="63" Background="#FF9FBFD9" FontSize="24"/>
        </StackPanel>
        
        <TextBlock Margin="0,100,0,0" Background="Beige" x:Name="txbInfo" TextWrapping="Wrap" Text="TextBlock" FontSize="24"/>
    </Grid>
</Window>
